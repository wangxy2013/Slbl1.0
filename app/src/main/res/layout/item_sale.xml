<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/ll_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dm_10"
    >

    <com.twlrg.slbl.widget.CircleImageView
        android:id="@+id/iv_user_head"
        android:layout_width="@dimen/dm_40"
        android:layout_height="@dimen/dm_40"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user"/>


    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:textColor="@color/black"
        android:textSize="@dimen/t16"
        android:textStyle="bold" android:layout_centerVertical="true" android:layout_toRightOf="@+id/iv_user_head" android:layout_toEndOf="@+id/iv_user_head"
        android:layout_marginStart="13dp"/>

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_user_name"
        android:textColor="@color/black"
        android:textSize="@dimen/t14"/>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_single_selection_on"/>

</RelativeLayout>