<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dm_10"
    >
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:text="1111"
        android:textColor="@color/blackA"
        android:textSize="@dimen/t16"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_marginTop="@dimen/dm_3"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:src="@drawable/ic_message_off"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/iv_msg"
            android:text="1111"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t14"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_5"
        android:gravity="right"
        android:textColor="@color/blackA"
        android:textSize="@dimen/t14"
        android:visibility="gone"/>
</LinearLayout>