<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_10"
        android:background="#E3E3E3"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hotel_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gray_frame_5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dm_15"
            android:background="@drawable/common_yellow_5dp"
            android:padding="@dimen/dm_5">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textColor="@color/white"
                android:textSize="@dimen/t16"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"
                android:layout_marginLeft="@dimen/dm_3"
                android:textColor="@color/white"
                android:textSize="@dimen/t10"
                />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_10">

            <RatingBar
                android:id="@+id/rb_star"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="3.5"/>

            <TextView
                android:id="@+id/tv_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dm_15"
                android:layout_toLeftOf="@+id/rb_star"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="维也纳数据返回惊"
                android:textColor="@color/black"
                android:textSize="@dimen/t16"
                android:textStyle="bold"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_position_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_marginRight="@dimen/dm_10"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="维也纳数据返回惊"
            android:textColor="@color/black"
            android:textSize="@dimen/t14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_10">
            <TextView
                android:id="@+id/tv_service_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dm_5"
                android:layout_toLeftOf="@+id/tv_jl"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="维也纳数据返回惊"
                android:textColor="@color/green"
                android:textSize="@dimen/t14"/>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="1121.97公里"
                android:textColor="@color/green"
                android:textSize="@dimen/t12"/>
            <TextView
                android:id="@+id/tv_jl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_distance"
                android:gravity="center_vertical"
                android:text="距您:"
                android:textColor="@color/black"
                android:textSize="@dimen/t12"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>